<!doctype html>
<html lang="en">
  <head>
    <title>Sistema PPGI</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css">
  </head>
  <body class="bg-dark">
    <div class="container-fluid">
      <h1 class="display-1 text-center text-light">Sistema PPGI</h1>
      <hr>

      <div class="container card bg-primary text-muted">

        <form id="formulario" method="POST" action="/enviar" enctype="multipart/form-data">
          <div class="form-group row">

            <!-- Input file -->
            <div class="form-group col-6">
              <label for="file">Selecione os arquivos do SistemaPPGI</label>
              <input type="file" accept=".csv" class="form-control-file" id="file" name="file" multiple required>
              <small>Nomes val√≠dos: docentes.csv, publicacoes.csv, qualis.csv, regras.csv, veiculos.csv</small>
            </div>
          
          <!-- Input ano -->
          <div class="form-group col-6">
            <label for="ano">Ano</label>
            <input type="text" class="form-control" id="ano" name="ano" placeholder="2017" required/>
          </div>
          
          <div class="col-12">
            <button type="submit" class="btn btn-block btn-light btn btn-outline-muted">Enviar</button>
          </div>
        </form>
      </div>

    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="/javascripts/jquery-3.3.1.slim.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/bootstrap.min.js" ></script>
  
